<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update a User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">create user</a>
    </div>
    <!-- <%= JSON.stringify(userEdit)%>   testing xem userEdit duoc truyen vao ejs chua  -->
    <div class="form-add-new">
      <form action="/create-user" method="POST">
        <fieldset>
          <legend>Edit a user:</legend>
          <div class="input-group">
            <label for="">Email</label>
            <input type="text" name="email" value="<%=userEdit.email%>" />
          </div>
          <div class="input-group">
            <label for="">Name</label>
            <input type="text" name="myname" value="<%=userEdit.name%>" />
          </div>
          <div class="input-group">
            <label for="">City</label>
            <input type="text" name="city" value="<%=userEdit.city%>" />
          </div>
          <div>
            <button>Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>

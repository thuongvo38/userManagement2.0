          <th>Email</th>
          <th>City</th>
          <th>Action</th>
        </tr>

        <% listUsers.forEach(function(user) { %>
        <tr>
          <td><%=user.id%></td>
          <td><%=user.name%></td>
          <td><%=user.email%></td>
          <td><%=user.city%></td>
          <td>
            <a href="/update/<%=user.id%>">Edit</a>
            <form action="/delete-user/<%=user.id%>" method="POST">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete a User</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/create">create user</a>
    </div>
    <!-- <%= JSON.stringify(userEdit)%>   testing xem userEdit duoc truyen vao ejs chua  -->
    <div class="form-add-new">
      <form action="/delete-user" method="POST">
        <fieldset>
          <legend>Delete a user:</legend>
          <div class="input-group d-none">
            <label for="">Id</label>
            <input type="text" name="userId" value="<%=userEdit.id%>" />
          </div>
          <div class="input-group">
            <label for="">Are you sure to remove user with Email</label>
            <input type="text" name="email" value="<%=userEdit.email%>" />
          </div>

          <div>
            <button>Confirm</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
